@model BARTPerks.Models.PerksModel

@{
    ViewBag.Title = "Gift Card Signup";
    ViewBag.BodyClasses = "page-gift-card page-gift-card-signup";
}

<div class="title-wrapper clearfix">
    <h1 class="title" id="page-title">@ViewBag.Title</h1>
</div>
<div class="region region-content">
    <div id="block-system-main" class="block block-system">
        <div class="content">
            <div class="signup-desc">
                <div class="success-status">
                    <p>Congratulations!</p>
                </div>
                <p>Fill in the information below to complete your registration and receive your [$X] gift card.</p>
            </div>
            <div class="gc-parent">
                <div class="ls-static-bart-content">
                    <div class="ls-content">
                        <img src="~/Content/images/logo_perks.png" alt="Bart Logo">
                        <p>Are you a peak period BART rider in need of some Participation requires a coupon code breathing room? BART Perks gives Clipper Card users occasional rewards to shift to less crowded trains and advises you on less crowded times to travel. If you sign up, you’ll also be eligible to receive occasional rewards for weekend travel.</p>
                        <p>BART Perks is a test program. Participation is limited and by invitation only. For more information, read the <a href="/Bartperklocal/">FAQs</a></p>
                    </div>
                </div>
                <div class="gc-wrap">
                    <div class="gc-signup-form">
                        <div class="signup-wrap">
                            <form class="bart-perk-custom-form" action="/gift-card/signup" method="post" id="bart-sso-custom-signup-form" accept-charset="UTF-8" style="display: block;">
                                <div>
                                    <div class="gift-card-container">
                                        <div class="form-item form-type-textfield form-item-first-name">
                                            <label class="element-invisible" for="edit-first-name">First Name <span class="form-required" title="This field is required.">*</span></label>
                                            <input placeholder="First Name" class="user-first-name form-text required" type="text" id="edit-first-name" name="first_name" value="" size="60" maxlength="128" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                                            <div class="description">First Name.</div>
                                        </div>
                                        <div class="form-item form-type-textfield form-item-last-name">
                                            <label class="element-invisible" for="edit-last-name">Last Name <span class="form-required" title="This field is required.">*</span></label>
                                            <input placeholder="Last Name" class="user-last-name form-text required" type="text" id="edit-last-name" name="last_name" value="" size="60" maxlength="128">
                                            <div class="description">Last Name.</div>
                                        </div>
                                        <div class="form-item form-type-textfield form-item-email">
                                            <label class="element-invisible" for="edit-email--2">Email Address <span class="form-required" title="This field is required.">*</span></label>
                                            <input placeholder="Email Address" class="user-email form-text required" type="text" id="edit-email--2" name="email" value="" size="60" maxlength="128">
                                            <div class="description">Email Address.</div>
                                        </div>
                                        <div class="clip-card-container">
                                            <div class="form-item form-type-textfield form-item-clip-card-number">
                                                <label class="element-invisible" for="edit-clip-card-number">Clipper Card Number <span class="form-required" title="This field is required.">*</span></label>
                                                <input placeholder="Clipper Card Number" class="user-clip-num form-text required" type="text" id="edit-clip-card-number" name="clip_card_number" value="" size="60" maxlength="128">
                                                <div class="description">Clipper Card Number.</div>
                                            </div>
                                            <div class="clip-card-img"><img src="~/Content/images/icon_clipperCard.png" alt="Clipper-Card"></div>
                                            <div class="form-item form-type-password-confirm form-item-password">
                                                <label class="element-invisible" for="edit-password--2">Password <span class="form-required" title="This field is required.">*</span></label>
                                                <div class="form-item form-type-password form-item-password-pass1">
                                                    <label class="element-invisible" for="edit-password-pass1">Password <span class="form-required" title="This field is required.">*</span></label>
                                                    <input class="password-field form-text required" placeholder="Create Password" type="password" id="edit-password-pass1" name="password[pass1]" size="60" maxlength="128" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                                                </div>
                                                <div class="form-item form-type-password form-item-password-pass2">
                                                    <label class="element-invisible" for="edit-password-pass2">Confirm password <span class="form-required" title="This field is required.">*</span></label>
                                                    <input class="password-confirm form-text required" placeholder="Confirm Password" type="password" id="edit-password-pass2" name="password[pass2]" size="60" maxlength="128" style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                                                </div>
                                                <div class="description">Enter the same password in both fields.</div>
                                            </div>
                                            <input class="custom-form-submit cus-btn-disabled form-submit" type="submit" id="edit-submit--2" name="op" value="SIGN-UP" disabled="disabled">
                                            <div class="terms-condition">By clicking the Sign Up button, you agree to our <a href="/">Terms &amp; Conditions</a>, and <a href="/">Privacy Policy</a>.</div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="form_build_id" value="form-ru85NNlYX3cBnhAIvjIZbrMknD8gUG28OgtT7k3asFc">
                                    <input type="hidden" name="form_token" value="CMJrK8AT3H4mJM5bNkA_RgbEJnkqPW7402akTppAIUo">
                                    <input type="hidden" name="form_id" value="bart_sso_custom_signup_form">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
